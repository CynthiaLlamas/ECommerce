{
    "Routes": [
        {
        "ServiceName": "ECOMCatalogServiceAPI",
        "DownstreamPathTemplate": "/api/catalog/{everything}",
        "DownstreamHostAndPorts":[
            {
                "Host":"ECOMCatalogServiceAPI",
                "Port": 8080
            }
        ],
        "UpstreamPathTemplate": "/catalog/{everything}",
        "UpstreamHttpMethod": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
        ],
        "FileCacheOptions": {
            "TtlSeconds": 15
        },
        "LoadBalancerOptions": {
            "Type": "LeastConnection",
            "Key": null,
            "Expiry": 0
        }
        },
        {
        "ServiceName": "ECOMCartServiceAPI",
        "DownstreamPathTemplate": "api/cart/{everything}",
        "DownstreamHostAndPorts":[
            {
                "Host": "ECOMCartServiceAPI",
                "Port":8080
            }
        ],
        "UpstreamPathTemplate": "/cart/{everything}",
        "UpstreamHttpMethod": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
        ],
        "FileCacheOptions": {
            "TtlSeconds": 15
        },
        "LoadBalancerOptions": {
            "Type": "LeastConnection",
            "Key": null,
            "Expiry": 0
        }
        },
        {
        "ServiceName": "ECOMOrdersServiceAPI",
        "DownstreamPathTemplate": "/api/order/{everything}",
        "DownstreamHostAndPorts":[
            {
                "Host": "ECOMOrdersServiceAPI",
                "Port":80
            }
        ],
        "UpstreamPathTemplate": "/order/{everything}",
        "UpstreamHttpMethod": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
        ],
        "FileCacheOptions": {
            "TtlSeconds": 15
        },
        "LoadBalancerOptions": {
            "Type": "LeastConnection",
            "Key": null,
            "Expiry": 0
        }
        }
    ],
    "GlobalConfiguration": {
        "BaseUrl": "http://localhost:80",
        "RequestIdKey": "OcRequestId",
        "DownstreamScheme": "http",
        "ReRoutesCaseSensitive": false,
        "UseServiceDiscovery": true,
        "ServiceDiscoveryProvider": {
            "Host": "ECOMEurekaRegistry",
            "Port": 8761,
            "Type": "Eureka"
        }
    }
    }